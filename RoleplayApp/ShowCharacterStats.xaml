<Window x:Class="RoleplayApp.ShowCharacterStats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoleplayApp"
        mc:Ignorable="d"
        Background="Gray"
        ResizeMode="NoResize"
        Title="ShowCharacterStats" Height="600" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border
            BorderBrush="Black"
            BorderThickness="5"
            Grid.ColumnSpan="3"
            Width="200">
            <Image
                Name="CharImage"
                Stretch="Fill"/>
        </Border>
        
        <StackPanel
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.ColumnSpan="3">

            <TextBlock
                Name="charName"
                Text="Character Name here"
                FontSize="25"
                Margin="0,0,0,10"
                HorizontalAlignment="Center" 
                TextAlignment="Center"/>

            <TextBlock
                Name="charType"
                Text="Character Type here"
                FontSize="20"
                HorizontalAlignment="Center" 
                TextAlignment="Center"/>

            <TextBlock
                Name="charAge"
                Text="Character Age here"
                FontSize="25"
                Margin="0,30,0,10"
                HorizontalAlignment="Center"/>

            <TextBlock
                Name="charGender"
                Text="Character Gender here"
                FontSize="25"
                Margin="0,0,0,10"
                HorizontalAlignment="Center"/>

            <Border 
                BorderBrush="DarkGoldenrod"
                BorderThickness="2">
                <TextBlock
                    x:Name="charDescription"
                    Text="Character description here."
                    Height="170"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    TextWrapping="Wrap" 
                    TextAlignment="Center"
                    />
            </Border>


        </StackPanel>

        <Button
            Name="done"
            Grid.Row="2"
            Grid.Column="2"
            VerticalAlignment="Bottom"
            Height="30"
            Content="Done"
            FontSize="20" Click="done_Click"/>

        <Button
            Name="deleteChar"
            Grid.Row="2"
            Grid.Column="0"
            VerticalAlignment="Bottom"
            Height="30"
            Content="Delete"
            FontSize="20"
            Background="DarkRed" Click="deleteChar_Click"/>
    </Grid>
</Window>
